<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp3.1;netcoreapp2.1</TargetFrameworks>
    <Description>A .NET Core Global Tool that generates Markdown from .NET XML documentation comments.</Description>
    <PackageTags>.NET XML documentation comments Markdown</PackageTags>
    <IsPackable>true</IsPackable>
    <PackAsTool>True</PackAsTool>
    <AssemblyName>xmldocmd</AssemblyName>
    <RootNamespace>XmlDocMarkdown</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\XmlDocMarkdown.Core\XmlDocMarkdown.Core.csproj" />
  </ItemGroup>

</Project>
